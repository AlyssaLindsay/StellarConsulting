@page "/history"
@rendermode InteractiveServer
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject NavigationManager NavManager


<div class="container py-4">

    <!--Page title-->
    <h2 class="page-title mb-4">Outline History</h2>

    <!-- Back Button -->
        <div class="col text-end">
        <button class="btn btn-secondary shadow-sm rounded-pill px-4" @onclick="NavigateToHome">Back</button>
        </div>

    <!-- Table -->
    <table class="table table-borderless align-middle">
        <thead class="border-bottom text-purple">
            <tr>
                <th>Year Created</th>
                <th>Course Owner</th>
                <th>Program</th>
                <th>Version</th>
                <th class="outline-col">Course Outline</th>
            </tr>
        </thead>
        <tbody>
            <tr class="border-bottom">
                <td>2025</td>
                <td>Owner A</td>
                <td>Program 1</td>
                <td>Current</td>
                <td><button class="btn btn-secondary rounded-pill px-4">View</button></td>
            </tr>
            <tr class="border-bottom">
                <td>2021/2022</td>
                <td>Owner B</td>
                <td>Program 2</td>
                <td>Archived</td>
                <td><button class="btn btn-secondary rounded-pill px-4">View</button></td>
            </tr>
            <tr class="border-bottom">
                <td>2019</td>
                <td>Owner C</td>
                <td>Program 3</td>
                <td>Archived</td>
                <td><button class="btn btn-secondary rounded-pill px-4">View</button></td>
            </tr>
            <tr class="border-bottom">
                <td>2017/2018</td>
                <td>Owner D</td>
                <td>Program 4</td>
                <td>Archived</td>
                <td><button class="btn btn-secondary rounded-pill px-4">View</button></td>
            </tr>
            <tr class="border-bottom">
                <td>2015/2016</td>
                <td>Owner E</td>
                <td>Program 5</td>
                <td>Archived</td>
                <td><button class="btn btn-secondary rounded-pill px-4">View</button></td>
            </tr>
            <tr class="border-bottom">
                <td>2014</td>
                <td>Owner F</td>
                <td>Program 6</td>
            <td>Archived</td>
                <td><button class="btn btn-secondary rounded-pill px-4">View</button></td>
            </tr>
            <tr class="border-bottom">
                <td>2010</td>
                <td>Owner G</td>
                <td>
                    <div>Program 7</div>
                    <div>Program 4</div>
                </td>
            <td>Archived</td>
                <td><button class="btn btn-secondary rounded-pill px-4">View</button></td>
            </tr>
        </tbody>
    </table>
</div>

@code {
    private void NavigateToHome()
    {
        NavManager.NavigateTo("/");
    }
}

<style>
    .text-purple {
        color: #8e44ad;
    }

    .btn-purple {
        background-color: #8e44ad;
        color: white;
        border: none;
    }

        .btn-purple:hover {
            background-color: #732d91;
        }

    .btn-secondary {
        background-color: #888;
        border: none;
        color: white;
    }

    .page-title {
        color: #732181;
